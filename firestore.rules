rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for Admin role.
    // In this app, the admin is identified by a specific email address.
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'kymt83091@gmail.com';
    }

    // Products: Anyone can read the products list. Only admins can create, update, or delete them.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Wallets:
    // - Users can create their own wallet for the first time.
    // - Users can read their own wallet.
    // - Admins can read any wallet.
    // - Wallet balance updates are handled by server-side logic (transactions from orders/topups), not direct user writes.
    //   Admins can update balance directly.
    match /wallets/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if isAdmin();
    }

    // Orders:
    // - Users can create their own orders.
    // - Users can read orders if their UID matches or if they provide the correct Player ID.
    // - Admins can read and update any order.
    match /orders/{orderId} {
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if isAdmin();
      
      // Allow unauthenticated users to query orders by their `playerId` for the tracking page
      allow list: if request.query.get('where')[0][0] == 'playerId' || isAdmin();
    }

    // Top-Up Requests:
    // - Users can create their own top-up requests.
    // - Admins can read and update all requests.
    // - Users can see their own top-up requests.
    match /topUpRequests/{requestId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow update: if isAdmin();
      allow list: if isAdmin();
    }
    
    // Settings: 
    // - Anyone can read the settings (for the promo banner).
    // - Only admins can change the settings.
    match /settings/{settingId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}