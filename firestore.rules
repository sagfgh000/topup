
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'kymt83091@gmail.com';
    }

    // Helper function to check if a user is authenticated and is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Products can be read by anyone, but only managed by an admin.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Wallets: Users can create their own wallet. They can update it ONLY if they are placing an order (checked in the order rules). Admins can view and edit any wallet.
    match /wallets/{userId} {
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
    }
    
    // Orders:
    // - Anyone can read order data (for public order tracking by Player ID).
    // - Authenticated users can create orders for themselves.
    // - Admins can read/write all orders.
    match /orders/{orderId} {
      allow read: if true;
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isAdmin();
    }

    // TopUpRequests:
    // - Users can create their own requests.
    // - Users can read their own requests.
    // - Admins can read and update all requests (to approve/reject them).
    match /topUpRequests/{requestId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isAdmin();
    }

    // Settings are only managed by an admin.
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
