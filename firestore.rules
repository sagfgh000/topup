rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Ensure you replace this with your actual admin email.
      return request.auth.token.email == 'kymt83091@gmail.com' && request.auth.token.email_verified;
    }

    // Wallets:
    // - Users can read and update their OWN wallet.
    // - Admins can list/read all wallets for the customer table and update any wallet.
    match /wallets/{userId} {
      allow read, update: if isOwner(userId);
      allow get, list, update: if isAdmin();
    }

    // Orders: 
    // - Users can create and read their OWN orders.
    // - Admins can read/list/update all orders.
    match /orders/{orderId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow list, update: if isAdmin();
    }

    // topUpRequests:
    // - Users can create their own requests.
    // - Admins can read/list/update all requests.
    match /topUpRequests/{requestId} {
      allow create: if isOwner(request.resource.data.userId);
      allow list, get, update: if isAdmin();
    }
    
    // Products:
    // - Anyone can read the product list.
    // - Only admins can create, update, or delete products.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Settings (like promo banner):
    // - Anyone can read the settings.
    // - Only admins can write/change settings.
    match /settings/{settingId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
